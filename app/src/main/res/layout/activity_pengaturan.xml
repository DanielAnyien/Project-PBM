<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white2"
    tools:context=".PengaturanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle3">

        <ImageView
            android:id="@+id/imageViewBtnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btnleft"
            android:layout_marginTop="27dp"
            android:layout_marginStart="25dp"
            android:contentDescription="@string/todo">

        </ImageView>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="197dp"
            android:layout_height="32dp"
            android:background="@drawable/searchview"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="20dp"
            android:iconifiedByDefault="false"
            android:layoutDirection="rtl"
            android:queryHint="pencarian"
            android:theme="@style/AppSearchView">

        </SearchView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            tools:ignore="RelativeOverlap,UseCompoundDrawables">

            <ImageView
                android:id="@+id/imageViewPengaturan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pengaturan"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/todo">

            </ImageView>

            <TextView
                android:id="@+id/textViewPengaturan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/pengaturan"
                android:textSize="25sp"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAkun"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_margin="25dp">

            <TextView
                android:id="@+id/textViewAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/akun"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_margin="10dp">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:background="@color/gray">

            </View>

        <TextView
            android:id="@+id/textViewAkunNmPengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="@string/nama_pengguna"
            android:textColor="@color/black"
            android:textSize="14sp">


        </TextView>

        <TextView
            android:id="@+id/textViewShowNmPengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp">


        </TextView>

        <TextView
            android:id="@+id/textViewAkunPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="@string/pin"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp">

        </TextView>

        <TextView
            android:id="@+id/textViewShowAkunPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp">

        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSistem"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/textViewSistem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/sistem"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_margin="10dp">

        </TextView>

        <View
            android:id="@+id/horizontalLineSistem"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:background="@color/gray">

        </View>

        <TextView
            android:id="@+id/textViewPemberitahuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="@string/pemberitahuan"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="20dp"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:layout_gravity="end">

        </Switch>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDatabase"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/textViewDatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/database"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_margin="10dp">

        </TextView>

        <View
            android:id="@+id/horizontalLineDatabase"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:background="@color/gray">

        </View>

        <TextView
            android:id="@+id/textViewBackupOrRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="@string/backup_restore_data_di_penyimpanan_internal"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>

        <ImageView
            android:id="@+id/imageViewRestoreGreenBtnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/btnright_green"
            android:layout_gravity="end"
            android:contentDescription="@string/todo">

        </ImageView>

        <TextView
            android:id="@+id/textViewReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="@string/reset_data_konsep_dan_kategori"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>

        <ImageView
            android:id="@+id/imageViewResetGreenBtnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/btnright_green"
            android:layout_gravity="end"
            android:contentDescription="@string/todo">

        </ImageView>

    </androidx.cardview.widget.CardView>

</LinearLayout>